{
  "compilerOptions": {
    "strict": false,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "noUnusedParameters": false,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "rootDir": "src",
    "allowJs": true,
    "typeRoots": ["node_modules/@types", "types"],
    "paths": {
      "@systalk/state-message": ["node_modules/@systalk/state-message/dist"],
      "@systalk/state-message/*": ["node_modules/@systalk/state-message/dist/*"],
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "./node_modules/"
  ]
}